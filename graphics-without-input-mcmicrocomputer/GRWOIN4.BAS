90 DIM MSG$(4):MSG$="DONE"
100 REM INITIALIZATION
120 GRAPHICS 8+16:COLOR 1:SETCOLOR 2,0,0
130 A=31:B=28:C=(A+B)/B:D=6*A
140 XC=D/2:YC=D/2
160 GOSUB 380
200 GOSUB 280
210 GOSUB 320
220 Q=Q+0.1
230 IF Q>88 THEN 400
250 GOSUB 280
260 GOSUB 350
270 GOTO 220
280 REM COORDINATES CALCULATION
290 X=INT((A+B)*COS(Q)-B*COS(C*Q)+XC+0.5)
300 Y=INT((A+B)*SIN(Q)-B*SIN(C*Q)+YC+0.5)
310 RETURN 
320 REM PLOT
330 PLOT X,Y:RETURN 
350 REM DRAW
360 DRAWTO X,Y:RETURN 
380 REM BOX
390 PLOT 0,0:DRAWTO 0,D:DRAWTO D,D:DRAWTO D,0:DRAWTO 0,0:RETURN 
400 TEXT 193,2,MSG$
410 GOTO 410
